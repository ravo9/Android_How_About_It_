<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Default style settings -->
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.04</item>
        <item name="android:lineSpacingExtra">10dp</item>

    </style>

    <style name="ButtonStyle">
        <item name="android:backgroundTint">@drawable/search_button_color_selector</item>
        <item name="android:letterSpacing">0.12</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/elevation_first_floor</item>
    </style>

    <style name="footer">
        <item name="android:textSize">@dimen/footer_text_size</item>
        <item name="android:textColor">@color/colorTextVeryBright</item>
    </style>

</resources>
